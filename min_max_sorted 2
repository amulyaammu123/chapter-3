def find_min_max_sorted(arr):
    if not arr:
        return None, None
    
    min_val = arr[0]
    max_val = arr[-1]
    
    return min_val, max_val

# Example usage:
arr = [2, 4, 6, 8, 10, 12, 14, 18]
min_val, max_val = find_min_max_sorted(arr)
print(f"Input Array: {arr}")
print(f"Min = {min_val}, Max = {max_val}")
